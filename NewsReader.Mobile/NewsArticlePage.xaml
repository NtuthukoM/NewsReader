<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsReader.Mobile.NewsArticlePage"             
             Title="NewsArticlePage">
    <ScrollView>
        <Grid Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <Image 
                Grid.Row="0"
                    x:Name="imgArticle"
                    VerticalOptions="Center" 
                    Aspect="AspectFill"
                    WidthRequest="400"                    
                    HorizontalOptions="Center" />
            <Label Grid.Row="1"
                   Padding="5"
                    x:Name="lblArticle"
                    Text="This is a description of the article."
                    VerticalOptions="Center" 
                    TextType="Html"                    
                    HorizontalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>